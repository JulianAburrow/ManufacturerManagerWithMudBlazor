@page "/manufacturers/index"
@inherits ManufacturerBasePageClass

<PageTitle>Manufacturers</PageTitle>

@if (Manufacturers == null)
{
    <MudAlert Severity="Severity.Info" ContentAlignment="HorizontalAlignment.Center">Loading Manufacturers</MudAlert>
    return;
}

<a href="/manufacturer/create" class="btn btn-primary">Create Manufacturer</a>&nbsp;<button class="btn btn-success" hidden="@(!Manufacturers.Any())" @onclick="ExportAsCSV">Download as CSV</button>

<br />
<br />

<ManufacturerGridViewComponent Manufacturers="@Manufacturers" />