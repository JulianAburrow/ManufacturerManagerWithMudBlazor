@page "/colourjustification/delete/{ColourJustificationId:int}"
@inherits ColourJustificationBasePageClass

<PageTitle>Delete Colour Justification</PageTitle>

@if (ColourJustificationModel == null || ColourJustificationModel.Widgets == null)
{
    <LoadingMessageComponent ValueToShow="@ColourJustification" />
    return;
}

@if (!OkToDelete)
{
    <CannotDeleteComponent ObjectType="@ColourJustification" ObjectName="@ColourJustificationModel.Justification" WidgetCount="@ColourJustificationModel.Widgets.Count" />
    return;
}

<ConfirmDeleteComponent ObjectType="@ColourJustification" ObjectName="@ColourJustificationModel.Justification" />

<br />
<br />

@if (OkToDelete)
{
    <button class="btn btn-danger" @onclick="DeleteColourJustification">Delete</button>
    @:&nbsp;
}
<a href="/colourjustifications/index" class="btn btn-primary">Cancel</a>



