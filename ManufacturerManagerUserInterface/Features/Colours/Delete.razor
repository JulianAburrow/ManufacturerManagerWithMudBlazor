@page "/colour/delete/{ColourId:int}"
@inherits ColourBasePageClass

<PageTitle>Delete Colour</PageTitle>

@if (ColourModel == null || ColourModel.Widgets == null)
{
    <h3>Loading Colour...</h3>
    return;
}

<h3>Delete Colour</h3>

@if (ColourModel.Widgets.Count > 0)
{
    <MudAlert Severity="Severity.Error" ContentAlignment="HorizontalAlignment.Center">Cannot delete @ColourModel.Name as @ColourModel.Widgets.Count @(ColourModel.Widgets.Count == 1 ? "widget is" : "widgets are") this colour.</MudAlert>
    return;
}

<MudAlert Severity="Severity.Error" ContentAlignment="HorizontalAlignment.Center">Are you sure you want to delete colour @ColourModel.Name?</MudAlert>

@if (ColourModel.Widgets.Count == 0)
{
    <button class="btn btn-danger" @onclick="DeleteColour">Delete</button>
    @:&nbsp;
}

<a class="btn btn-primary" href="/colours/index">Cancel</a>