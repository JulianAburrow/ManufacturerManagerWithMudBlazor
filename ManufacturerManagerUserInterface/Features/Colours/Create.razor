@page "/colour/create"
@inherits ColourBasePageClass

<PageTitle>Create Colour</PageTitle>

<EditForm Model="@ColourDisplayModel" OnValidSubmit="CreateColour">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <MudGrid>
        <MudItem sm="7">
            <MudCard>
                <ColourCreateUpdateComponent ColourDisplayModel="@ColourDisplayModel" />
                <MudCardActions>
                    <button type="submit" class="btn btn-primary">Create</button>
                    &nbsp;
                    <a href="/colours/index" class="btn btn-primary">Cancel</a>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>
</EditForm>